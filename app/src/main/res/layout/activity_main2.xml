<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:openDrawer="end"
    android:layout_height="match_parent"
    android:id="@+id/drawer1"
    android:fitsSystemWindows="true"
    tools:context=".Main2Activity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/toolbar1"

            android:background="@color/colorAccent"
            android:layout_alignParentTop="true"

            ></android.support.v7.widget.Toolbar>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="33dp"
                android:onClick="profile"

                android:background="@android:color/white"
                android:layout_marginTop="140dp"
                android:text="profile"

                android:padding="5dp"
                android:drawableTop="@drawable/profil" />




            <Button
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="140dp"


                android:layout_marginLeft="26dp"
                android:onClick="books"
                android:text="Booking"
                android:background="@android:color/white"
                 android:drawableTop="@drawable/result" />



        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp">
            <Button
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="33dp"
                android:outlineSpotShadowColor="@android:color/background_dark"
                android:layout_marginTop="140dp"
                android:text="announcements"
                android:padding="5dp"
                android:background="@android:color/white"
               android:drawableTop="@drawable/chat" />




            <Button
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="140dp"

                android:layout_marginLeft="26dp"
                android:id="@+id/seaerch"
                android:text="@string/search"
                android:background="@android:color/white"

                android:onClick="search"
                android:drawableTop="@drawable/ddd"

                android:padding="5dp"
                />



        </LinearLayout>
    </RelativeLayout>


    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/nav_header_nav"
        android:layout_width="300dp"
        android:id="@+id/navigation"
        android:layout_height="match_parent"
        app:menu="@menu/activity_nav_drawer"
        android:layout_gravity="start"


        ></android.support.design.widget.NavigationView>







</android.support.v4.widget.DrawerLayout>